---
import Header from "../components/header.astro";
import Footer from "../components/footer.astro";
import SiteHead from "../components/SiteHead.astro";
import "@splidejs/splide/css";
---

<html lang="en">
  <head>
    <SiteHead
      title="The Serious Sandwich"
      description="Seriously Good Sandwiches made fresh daily."
    />
  </head>
  <body>
    <Header />
    <div id="body-wrapper">
      <div class="hero-section">
        <div class="inner">
          <a href="/"><img src="/images/logo.webp" alt="" /></a>
          <span
            class="order-button"
            data-glf-cuid="188ddbcd-9a26-49d6-b778-3d6940d80a13"
            data-glf-ruid="60be44a5-3532-41ae-a3d1-ae77c743ef70"
            >★ &nbsp; Order now &nbsp; ★</span
          >
        </div>
      </div>
      <div id="intro-section">
        <div class="content">
          <div class="inner">
            <div class="text">
              <h1>Seriously Good Sandwiches</h1>
            </div>

            <div id="food-slider" class="splide">
              <div class="splide__track">
                <ul class="splide__list">
                  <li class="splide__slide">
                    <img src="/images/sandwiches/chicken.jpeg" alt="sandwich" />
                    <span>Chicken and Roasted Capsicum</span>
                  </li>
                  <li class="splide__slide">
                    <img src="/images/sandwiches/blt.jpeg" alt="sandwich" />
                    <span>BLT</span>
                  </li>
                  <li class="splide__slide">
                    <img src="/images/sandwiches/ham.jpeg" alt="sandwich" />
                    <span>Classic Ham and Cheese</span>
                  </li>
                  <li class="splide__slide">
                    <img src="/images/sandwiches/peanut.jpeg" alt="sandwich" />
                    <span>Poached Chicken and Peanut Slaw</span>
                  </li>
                  <li class="splide__slide">
                    <img
                      src="/images/sandwiches/halloumi.jpeg"
                      alt="sandwich"
                    />
                    <span>Halloumi Sambo</span>
                  </li>
                </ul>
              </div>
            </div>
            <span
              class="order-button"
              data-glf-cuid="188ddbcd-9a26-49d6-b778-3d6940d80a13"
              data-glf-ruid="60be44a5-3532-41ae-a3d1-ae77c743ef70"
              >★ &nbsp; Order now &nbsp; ★</span
            >
          </div>
        </div>
      </div>
      <div id="coffee-section">
        <div class="content">
          <div class="inner">
            <div class="text">
              <h2>Make it a combo</h2>
              <p>
                Pair your favorite sandwich with a freshly brewed coffee for the
                perfect meal. Whether you’re after something hearty or something
                light, our fresh brews and handcrafted sandwiches come together
                for a flavour-packed experience you’ll want every day.
              </p>
              <span
                class="order-button"
                data-glf-cuid="188ddbcd-9a26-49d6-b778-3d6940d80a13"
                data-glf-ruid="60be44a5-3532-41ae-a3d1-ae77c743ef70"
                >★ &nbsp; Order now &nbsp; ★</span
              >
            </div>
            <img src="/images/coffee.png" alt="" />
          </div>
        </div>
      </div>
      <div id="team-section">
        <div class="content">
          <div class="inner">
            <div class="text">
              <h2>Meet the Team</h2>
              <p>
                Our dedicated team is passionate about creating delicious
                sandwiches and providing exceptional service. Get to know the
                people behind The Serious Sandwich!
              </p>
              <a href="/about" class="order-button">About Us</a>
            </div>
            <img src="/images/team.jpg" alt="" />
          </div>
        </div>
      </div>
    </div>
    <Footer />
  </body>
</html>

<script>
  import Splide from "@splidejs/splide";

  new Splide("#food-slider", {
    type: "loop",
    gap: "1rem",
    arrows: true,
    pagination: true,
    autoplay: false,

    // ⭐️ RESPONSIVE SETTINGS
    perPage: 3, // Desktop default

    breakpoints: {
      1024: { perPage: 2 }, // Tablets
      640: { perPage: 1 }, // Mobile
    },
  }).mount();
</script>
