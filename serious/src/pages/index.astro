---
import Layout from "../Layouts/layout.astro";
---

<Layout>
  <div id="body-wrapper">
    <div class="hero-section">
      <div class="inner">
        <a href="/"><img src="/images/logo.webp" alt="" /></a>
        <span
          class="order-button primary large"
          data-glf-cuid="188ddbcd-9a26-49d6-b778-3d6940d80a13"
          data-glf-ruid="60be44a5-3532-41ae-a3d1-ae77c743ef70"
          >★ &nbsp; See menu & order &nbsp; ★</span
        >
      </div>
      <img
        class="hero-img"
        src="/images/hero-img-1600.webp"
        srcset="
    /images/hero-img-600.webp 600w,
    /images/hero-img-1024.webp 1024w,
    /images/hero-img-1600.webp 1600w,
    /images/hero-img-2200.webp 2200w
  "
        sizes="100vw"
        alt="The Serious Sandwich hero banner"
        loading="eager"
        fetchpriority="high"
        decoding="async"
        width="1600"
        height="900"
      />
    </div>
    <div id="intro-section">
      <div class="content">
        <div class="inner">
          <div class="text">
            <h1>Seriously Good Sandwiches</h1>
          </div>

          <div id="food-slider" class="splide">
            <div class="splide__track">
              <ul class="splide__list">
                <li class="splide__slide">
                  <img src="/images/sandwiches/chicken.jpeg" alt="sandwich" />
                  <span>Chicken and Roasted Capsicum</span>
                </li>
                <li class="splide__slide">
                  <img src="/images/sandwiches/blt.jpeg" alt="sandwich" />
                  <span>BLT</span>
                </li>
                <li class="splide__slide">
                  <img src="/images/sandwiches/ham.jpeg" alt="sandwich" />
                  <span>Classic Ham and Cheese</span>
                </li>
                <li class="splide__slide">
                  <img src="/images/sandwiches/peanut.jpeg" alt="sandwich" />
                  <span>Poached Chicken and Peanut Slaw</span>
                </li>
                <li class="splide__slide">
                  <img src="/images/sandwiches/halloumi.jpeg" alt="sandwich" />
                  <span>Halloumi Sambo</span>
                </li>
              </ul>
            </div>
          </div>
          <span
            class="order-button secondary large"
            data-glf-cuid="188ddbcd-9a26-49d6-b778-3d6940d80a13"
            data-glf-ruid="60be44a5-3532-41ae-a3d1-ae77c743ef70"
            >★ &nbsp; See the full menu &nbsp; ★</span
          >
        </div>
      </div>
    </div>

    <div id="coffee-section">
      <div class="content">
        <div class="inner">
          <div class="text">
            <h2>Make it a combo</h2>
            <p>
              Pair your favorite sandwich with a freshly brewed coffee for the
              perfect meal. Whether you’re after something hearty or something
              light, our fresh brews and handcrafted sandwiches come together
              for a flavour-packed experience you’ll want every day.
            </p>
            <span
              class="order-button primary large"
              data-glf-cuid="188ddbcd-9a26-49d6-b778-3d6940d80a13"
              data-glf-ruid="60be44a5-3532-41ae-a3d1-ae77c743ef70"
              >★ &nbsp; Grab a coffee &nbsp; ★</span
            >
          </div>
          <img src="/images/coffee.png" alt="" />
        </div>
      </div>
    </div>

    <div id="team-section">
      <div class="content">
        <div class="inner">
          <div class="text">
            <h2>Meet the Team</h2>
            <p>
              Behind every serious sandwich is a team serious about quality.
              From sourcing the freshest ingredients to crafting each sandwich
              with care, our dedicated team works tirelessly to ensure every
              bite is a testament to our commitment to excellence.
            </p>
            <a href="/about" class="order-button secondary large"
              >★ &nbsp; About us &nbsp; ★</a
            >
          </div>
          <img src="/images/team.jpg" alt="About us image" />
        </div>
      </div>
    </div>

    <div id="instagram-feed-section">
      <div class="content">
        <div class="inner">
          <div class="text">
            <h2>Follow Us on Instagram</h2>
            <p>
              See our latest sandwiches, specials, and behind-the-scenes
              moments!
            </p>
            <div class="insta-grid">
              <img src="/images/insta/insta1.webp" alt="Instagram image" />
              <img src="/images/insta/insta2.webp" alt="Instagram image" />
              <img src="/images/insta/insta3.webp" alt="Instagram image" />
              <img src="/images/insta/insta4.webp" alt="Instagram image" />
              <img src="/images/insta/insta5.webp" alt="Instagram image" />
              <img src="/images/insta/insta6.webp" alt="Instagram image" />
            </div>
            <a
              href="https://instagram.com/theserious.sandwich"
              class="order-button primary large"
              target="_blank"
              rel="noopener noreferrer">★ &nbsp; Visit our Instagram &nbsp; ★</a
            >
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>

<!-- Splide CDN -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@splidejs/splide@4.1.4/dist/css/splide.min.css">
<script src="https://cdn.jsdelivr.net/npm/@splidejs/splide@4.1.4/dist/js/splide.min.js"></script>
<script>
  declare const Splide: any;
  document.addEventListener("DOMContentLoaded", function () {
    new Splide("#food-slider", {
      type: "loop",
      gap: "1rem",
      arrows: true,
      pagination: false,
      autoplay: false,
      perPage: 3,
      breakpoints: {
        1024: { perPage: 2 },
        640: { perPage: 1 },
      },
    }).mount();
  });
</script>