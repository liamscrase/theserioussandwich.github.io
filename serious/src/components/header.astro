---
const siteTitle = "The Serious Sandwich";
---

<nav class="desktop-navbar">
    <div class="desktop-navbar-container">
        <a href="/"><img src="/images/serious-logo.jpg" alt="" /></a>
        <div class="nav-links">
            <ul>
                <li><a href="/about/">About</a></li>
                <li><a href="/contact/">Contact</a></li>
            </ul>
        </div>

        <span
            class="order-button"
            data-glf-cuid="188ddbcd-9a26-49d6-b778-3d6940d80a13"
            data-glf-ruid="60be44a5-3532-41ae-a3d1-ae77c743ef70"
            >See MENU & Order</span
        >
    </div>
</nav>

<nav class="mobile-navbar">
    <input type="checkbox" id="menu-toggle" class="menu-toggle" />
    <div class="mobile-navbar-container">
        <span
                class="order-button-small"
                data-glf-cuid="188ddbcd-9a26-49d6-b778-3d6940d80a13"
                data-glf-ruid="60be44a5-3532-41ae-a3d1-ae77c743ef70"
                >Order now</span
            >

        <label for="menu-toggle" class="hamburger">
            <span></span>
            <span></span>
            <span></span>
        </label>
    </div>
    <div class="offcanvas-menu">
        <div class="menu-items">
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/about/">About</a></li>
                <li><a href="/contact/">Contact</a></li>
            </ul>
        </div>
    </div>
    <label for="menu-toggle" class="offcanvas-backdrop"></label>
</nav>

<script src="https://www.fbgcdn.com/embedder/js/ewm2.js" defer async></script>
<script>
    const setHeaderHeight = () => {
        const desktop = document.querySelector('.desktop-navbar');
        const mobile = document.querySelector('.mobile-navbar');
        const activeNavEl = (desktop && getComputedStyle(desktop).display !== 'none') ? desktop : mobile;
        if (activeNavEl instanceof HTMLElement) {
            document.documentElement.style.setProperty('--header-height', activeNavEl.offsetHeight + 'px');
        }
    };
    window.addEventListener('load', setHeaderHeight);
    window.addEventListener('resize', setHeaderHeight);
</script>
